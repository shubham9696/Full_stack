<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit Blog:-<%= blog.title%></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
	<div class="field">
		<label>Title</label>
		<input type="text" name="blog[title]" value="<%= blog.title %>">
	</div>

	<div class="field">
		<label>Author</label>
		<input type="text" name="blog[author]" value="<%= blog.author %>">
	</div>
	
	<div class="field">
		<label>Image</label>
		<input type="text" name="blog[images]" value="<%= blog.images %>">
	</div>
	
	<div class="field">
		<label>Blog</label>
		<textarea name="blog[content]"><%= blog.content %></textarea>
	</div>

	<input type="submit" class="ui green basic button">
	</form>
</div>

<% include ./partials/footer %>

