<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title %></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%= blog.images %>"></img>
		</div>
		<div class="container">
			<span><strong><%= blog.author %></strong></span>
			<br>
			<span><%= blog.created.toDateString() %></span>
		</div>
		<div class="description">
			<p><%- blog.content %></p>
		</div>

		<a href="/blogs/<%=blog._id%>/edit" class="ui orange basic button">Edit</a>
		<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="delete">
			<button class="ui red basic button">Delete</button>
		</form>
</div>

<% include ./partials/footer %>